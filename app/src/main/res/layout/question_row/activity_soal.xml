<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textViewNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#fff">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txt_no1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:textStyle="bold"

                            android:textSize="15dp"
                            android:text="1"/>

                        <TextView
                            android:id="@+id/txt_satu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:layout_marginLeft="7dp"
                            android:textSize="15dp"
                            android:text="jkklnjkbnc"/>

                    </LinearLayout>




                    <RadioGroup
                        android:id="@+id/rdoGroup1"
                        android:layout_marginLeft="21dp"
                        android:layout_marginRight="35dp"
                        android:layout_marginTop="5dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >                    >

                        <RadioButton
                            android:id="@+id/rdo1"
                            android:background="@drawable/activity_survey_detail"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:text="PUAS"/>



                        <RadioButton
                            android:id="@+id/rdo2"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/activity_survey_detail"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TIDAK"/>

                    </RadioGroup>

                    <requestFocus/>



                </LinearLayout>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#fff">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txt_no2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:textStyle="bold"

                            android:textSize="15dp"
                            android:text="2"/>

                        <TextView
                            android:id="@+id/txt_dua"

                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:text="Dari mana very very very looooonnnngggggggg anda mendapatkan informasi ini?"/>

                    </LinearLayout>
                    <RadioGroup
                        android:id="@+id/rdoGroup2"
                        android:layout_marginLeft="21dp"
                        android:layout_marginRight="35dp"
                        android:layout_marginTop="5dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >                    >

                        <RadioButton
                            android:id="@+id/rdo3"
                            android:background="@drawable/activity_survey_detail"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:text="IYA"/>



                        <RadioButton
                            android:id="@+id/rdo4"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/activity_survey_detail"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TIDAK"/>

                    </RadioGroup>

                </LinearLayout>
            </TableLayout>


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#fff">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_no3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textStyle="bold"

                        android:textSize="15dp"
                        android:text="3"/>

                    <TextView
                        android:id="@+id/txt_tiga"
                        android:layout_marginLeft="7dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:text="Upload Gambar?"/>

                    </LinearLayout>



                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="21dp"
                        android:layout_marginRight="35dp"
                        android:layout_marginTop="5dp"
                        android:background="#b2afaf">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_weight="1"
                            android:background="#b2afaf">

                            <Button
                                android:layout_width="70dp"
                                android:layout_height="20dp"
                                android:background="#fff"
                                android:textSize="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="6dp"
                                android:gravity="center"
                                android:padding="1dp"
                                android:text="Choose File"
                                android:id="@+id/btn_Chose"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/txt_File"
                                android:layout_margin="1dp"
                                android:text="No file selected..."
                                android:layout_gravity="center"/>

                        </TableRow>

                    </TableLayout>
                </LinearLayout>
            </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"

            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fff">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_no4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textStyle="bold"

                android:textSize="15dp"
                android:text="4"/>

            <TextView
                android:id="@+id/txt_empat"
                android:layout_marginLeft="7dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="15dp"
                android:text="Seberapa Anda Puas?"/>

                    </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:orientation="vertical"
                android:layout_marginRight="35dp"
                android:layout_marginTop="5dp">


                <CheckBox
                    android:id="@+id/check_1"
                    android:layout_span="2"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/activity_survey_detail"
                    android:text="YES"
                    />

                <CheckBox
                    android:id="@+id/check_2"
                    android:layout_span="2"
                    android:layout_marginTop="5dp"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/activity_survey_detail"
                    android:text="NO"
                    />

            </LinearLayout>

        </LinearLayout>
            </TableLayout>


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#fff">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_no5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textStyle="bold"

                        android:textSize="15dp"
                        android:text="5"/>

                    <TextView
                        android:id="@+id/txt_lima"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:text="Bagaimana seharusnya pelayanan IT?"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="21dp"
                        android:orientation="vertical"
                        android:layout_marginRight="35dp"
                        android:layout_marginTop="5dp">

                        <EditText
                            android:id="@+id/edtLayanan"
                            android:inputType="text"
                            android:singleLine="false"
                            android:padding="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/activity_survey_detail"
                            android:layout_span="2"
                            android:layout_weight="1"
                            android:layout_margin="1dp"
                            android:hint="Masukkan text responden..."/>



                    </LinearLayout>
                </LinearLayout>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#fff">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_no6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:text="6"/>

                    <TextView
                        android:id="@+id/txt_enam"
                        android:layout_marginLeft="7dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:text="Dari 1-10 berapa nilai pelayanan IT?"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="21dp"
                        android:orientation="vertical"
                        android:layout_marginRight="35dp"
                        android:layout_marginTop="5dp">

                        <EditText
                            android:id="@+id/edtNilai"
                            android:padding="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/activity_survey_detail"
                            android:layout_span="2"
                            android:layout_weight="1"
                            android:layout_margin="1dp"
                            android:inputType="number"
                            android:hint="Masukkan angka..."/>

                    </LinearLayout>
                </LinearLayout>
            </TableLayout>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#df4040"
            android:layout_margin="1dp"
            android:text="CANCEL"
            android:textColor="#fff"
            android:textStyle="bold"
            android:id="@+id/btn_Cancel"
            android:gravity="center"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:textColor="#fff"
            android:background="#16e714"
            android:layout_margin="1dp"
            android:text="SAVE"
            android:textStyle="bold"
            android:id="@+id/btn_Save"
            android:gravity="center"/>
    </LinearLayout>


</LinearLayout>