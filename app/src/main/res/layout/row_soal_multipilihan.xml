<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nomorSoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"

            android:textSize="15dp"
            android:text="x"/>

        <TextView
            android:id="@+id/textPertanyaan"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="15dp"
            android:text="Pertanyaan Multi"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="5dp">


        <CheckBox
            android:id="@+id/check_1"
            android:textColor="#000"
            android:layout_weight="1"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/activity_survey_detail"
            android:text="Multi 1"
            />

        <CheckBox
            android:id="@+id/check_2"
            android:layout_span="2"
            android:layout_marginTop="5dp"
            android:textColor="#000"
            android:layout_weight="1"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/activity_survey_detail"
            android:text="Multi 2"
            />
    </LinearLayout>
</LinearLayout>